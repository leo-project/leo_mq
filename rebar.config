{require_otp_vsn, "R14B04|R15B02|R15B03|R16B"}.

{deps, [
    {leo_commons,    ".*", {git, "https://github.com/leo-project/leo_commons.git",    "0.12.11"}},
    {leo_backend_db, ".*", {git, "https://github.com/leo-project/leo_backend_db.git", "0.12.10"}},
    {meck,           ".*", {git, "https://github.com/eproxus/meck.git",               "0.7.2" }}
]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
